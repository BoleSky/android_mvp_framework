<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!--标题栏的颜色-->
        <item name="colorPrimary">@color/themeColor</item>
        <!--状态栏的颜色-->
        <item name="colorPrimaryDark">@color/themeColor</item>
        <!--控件的选中颜色，即checked或selected状态的颜色。-->
        <item name="colorAccent">@color/themeColor</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>


    <style name="Theme.ToolBar" parent="AppTheme">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>


    <style name="ll_personalInformation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_35dp</item>
        <item name="android:layout_marginRight">@dimen/margin_35dp</item>
    </style>

    <style name="dividerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_height_1dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_5dp</item>
        <item name="android:layout_marginRight">@dimen/margin_5dp</item>
        <item name="android:background">@color/light_cyan</item>
    </style>
</resources>
