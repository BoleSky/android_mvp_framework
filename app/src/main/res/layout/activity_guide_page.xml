<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_guide_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bolesky.base.activity.GuidePageActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/guide_page"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/margin_35dp"
        android:layout_marginRight="@dimen/margin_35dp"
        android:layout_marginTop="@dimen/margin_35dp"
        android:background="@color/gainsboro"
        android:padding="@dimen/padding_5dp"
        android:text="跳过广告 3"
        android:textColor="@color/colorSecondText"/>
</RelativeLayout>
